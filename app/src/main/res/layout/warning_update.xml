<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:padding="24dp"
        android:orientation="vertical"
        android:background="@color/black">


        <TextView
            android:id="@+id/modal_check_update_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nueva Actualización"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            android:textSize="20sp"/>


        <TextView
            android:id="@+id/modal_check_update_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Tenemos disponible una nueva actualización de Sangrienta Lectura, Disfrutala e instalala en este momento."
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/modal_check_update_actualizar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actualizar"
                android:background="#eee"
                android:layout_weight=".5"
                android:textColor="#3b3b3b"
                android:layout_marginRight="5dp"
                />

            <Button
                android:id="@+id/modal_check_update_later"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#eee"
                android:textColor="#3b3b3b"
                android:text="Después"
                android:layout_weight=".5"
                />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>